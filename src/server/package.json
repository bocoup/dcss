{
    "name": "server",
    "version": "2.0.0-prealpha.0",
    "description": "Server for the Teacher Moments app",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mit-teaching-systems-lab/threeflows.git"
    },
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "db-create-role-dev": "psql -c \"CREATE ROLE tm WITH LOGIN PASSWORD 'teachermoments'\" || echo \"Error creating role\"",
        "db-create-dev": "db-migrate --env init db:create teachermoments || echo \"Error setting up database\"",
        "db-init-local": "yarn db-create-dev && yarn db-create-role-dev && yarn db-migrate-up",
        "create-migration": "node migrations/helpers/create-migration.js",
        "db-migrate-up": "db-migrate up",
        "db-migrate-down": "db-migrate down",
        "lint": "eslint --ext js .",
        "prettier": "prettier --write \"**/*.js\"",
        "test": "yarn workspace test run test:server"
    },
    "homepage": "https://github.com/mit-teaching-systems-lab/threeflows#readme",
    "dependencies": {
        "aws-sdk": "^2.518.0",
        "babel-polyfill": "^6.26.0",
        "body-parser": "^1.19.0",
        "connect-pg-simple": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "pg": "^7.12.1"
    },
    "devDependencies": {
        "db-migrate": "^0.11.6",
        "db-migrate-pg": "^1.0.0",
        "eslint": "^6.2.2",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "nodemon": "^1.19.1"
    }
}
