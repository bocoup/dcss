{
  "name": "threeflows",
  "version": "2.0.0-prealpha.0",
  "description": "Teacher Moments: Practice spaces for teacher preparation programs",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mit-teaching-systems-lab/threeflows.git"
  },
  "bugs": {
    "url": "https://github.com/mit-teaching-systems-lab/threeflows/issues"
  },
  "homepage": "https://github.com/mit-teaching-systems-lab/threeflows#readme",
  "main": "server/index.js",
  "workspaces": [
    "client",
    "server",
    "test"
  ],
  "scripts": {
    "build": "yarn workspace client run build",
    "create-migration": "yarn workspace server run create-migration",
    "db-create-dev": "db-migrate --env init db:create teachermoments || echo \"Error setting up database\"",
    "db-create-role-dev": "psql -c \"CREATE ROLE tm WITH LOGIN PASSWORD 'teachermoments'\" || echo \"Error creating role\"",
    "db-init-local": "yarn workspace server run db-init-local",
    "db-migrate-down": "yarn workspace server run db-migrate-down",
    "db-migrate-up": "yarn workspace server run db-migrate-up",
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "yarn workspace client run dev",
    "dev:server": "yarn workspace server run dev",
    "jest": "yarn workspace test run test",
    "lint": "npm-run-all \"lint:* {@}\" -c --",
    "lint:js": "eslint --ext .json --ext .js . --ignore-pattern \"**/*.js\"",
    "lint:packages": "yarn workspaces run lint",
    "prettier": "prettier --write \"**/*.{js,jsx,json,css}\"",
    "start": "webpack-dev-server --mode development",
    "storybook": "yarn workspaces run storybook",
    "test": "npm-run-all jest lint -c"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}